<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <RelativeLayout
        android:id="@+id/lay_profile_top"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ic_map_network">

        <LinearLayout
            android:id="@+id/lay_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_my_profile"
            />
        <LinearLayout
            android:id="@+id/lay_profile_info"
            android:layout_below="@+id/lay_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txt_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="USERNAME"
                android:textSize="20sp"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/txt_profile_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="TEAM"
                android:textSize="20sp"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/txt_profile_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="POINTS"
                android:textSize="20sp"
                android:textColor="#fff"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_profile_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_profile_top"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/lay_profile_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_profile_my_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="MY MATCHES"
                android:textSize="10pt"
                android:textColor="#fff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_profile_matches">
            <TextView
                android:id="@+id/txt_profile_my_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="MY FRIENDS"
                android:textSize="10pt"
                android:textColor="#fff"
                />
        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>