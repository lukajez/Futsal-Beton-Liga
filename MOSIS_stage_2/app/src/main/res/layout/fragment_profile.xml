<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:id="@+id/lay_profile_top"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/ic_map_network">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_profile_icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_profile_user"
            android:onClick="handleImageClick"
            />
        <LinearLayout
            android:id="@+id/lay_profile_info"
            android:layout_below="@+id/img_profile_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/txt_profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#ff785b"
                android:hint=""
                android:textSize="25sp"
                android:textColor="#ff785b"
                />

            <TextView
                android:id="@+id/txt_profile_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#ff785b"
                android:hint=""
                android:textSize="25sp"
                android:textColor="#ff785b"
                />

            <TextView
                android:id="@+id/txt_profile_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#ff785b"
                android:hint=""
                android:textSize="25sp"
                android:textColor="#ff785b"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lay_profile_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay_profile_top">

        <LinearLayout
            android:id="@+id/lay_profile_matches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_profile_my_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="MY MATCHES"
                android:textSize="10pt"
                android:textColor="#ff785b"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_profile_matches">
            <TextView
                android:id="@+id/txt_profile_my_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"
                android:hint="MY FRIENDS"
                android:textSize="10pt"
                android:textColor="#ff785b"
                />
        </LinearLayout>




    </RelativeLayout>

</RelativeLayout>