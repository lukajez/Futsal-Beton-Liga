<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMatchActivity"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lay_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/menu_shape">

        <Button
            android:id="@+id/btn_Back_AddMatch"
            android:layout_width="16dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_back_filled"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txt_Add_Match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD MATCH"
            android:textColor="#fff"
            android:textSize="15pt"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/btn_Confirm_AddMatch"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_confirm"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/txt_Add_MatchInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MATCH INFO"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/txt_Add_MatchInfoExp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic information about match"
            android:textColor="#fff"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <EditText
            android:id="@+id/etxt_Name_AddMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name.."
            android:textSize="18sp"
            android:textColor="#fff"
            android:textColorHint="#6f6f6f"
            android:backgroundTint="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <Spinner
                android:id="@+id/spinnerAddMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type.."
                android:textSize="18sp"
                android:textColor="#fff"
                android:textColorHint="#6f6f6f"
                android:backgroundTint="#fff"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginTop="1dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txt_Date_AddMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:hint="Set Match Date.."
                android:textSize="18sp"
                android:textColor="#fff"
                android:textColorHint="#6f6f6f"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:background="@drawable/holder_image"/>

        <TextView
            android:id="@+id/txt_Upload_Image_AddMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click to upload match image"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>